<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0,0,339,140">
        <Button Content="+" HorizontalAlignment="Left" Margin="24,72,0,0" VerticalAlignment="Top" Width="75"
               Command="{Binding Add}"/>
        <Button Content="=" HorizontalAlignment="Left" Margin="24,122,0,0" VerticalAlignment="Top" Width="75"
                Command="{Binding Equal}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="24,23,0,0" TextWrapping="Wrap" Text="{Binding Screen}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
